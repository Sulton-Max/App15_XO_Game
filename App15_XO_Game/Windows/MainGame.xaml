<Window x:Class="App15_XO_Game.Windows.MainGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:App15_XO_Game.Windows"
        mc:Ignorable="d"
        MouseDown="Window_MouseDown"
        WindowStyle="none"
        ResizeMode="NoResize"
        Title="MainGame" Height="450" Width="400">
    <StackPanel>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Height="40" Margin="0 10 0 0">
            <TextBlock x:Name="Status" Foreground="Gray" FontSize="18" FontWeight="SemiBold" Width="150"/>
            <TextBlock x:Name="Username" Foreground="Green" FontSize="18" FontWeight="Bold" Width="150"/>
            <Button x:Name="CloseBtn" Width="30" Height="30" Background="White">
                <Image Source="../Icons/close.png" Height="20" Width="20"/>
            </Button>
        </StackPanel>
        <Border BorderBrush="Gray" BorderThickness="2" Width="370" Height="370" Margin="0 0 0 10">
            <Canvas x:Name="MainArea" VerticalAlignment="Bottom" HorizontalAlignment="Center" 
                    Width="370" Height="370" Margin="0 0 0 10">
            </Canvas>
        </Border>
    </StackPanel>
</Window>
