<Window x:Class="App15_XO_Game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:App15_XO_Game"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <StackPanel>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Height="40" Margin="0 10 0 0">
            <TextBlock x:Name="Status" Text="Now Plays : " Foreground="Gray" FontSize="20" FontWeight="SemiBold"/>
            <TextBlock x:Name="Username" Foreground="Green" FontSize="20" FontWeight="Bold" Text="Player1"/>
        </StackPanel>
        <Border BorderBrush="Gray" BorderThickness="2" Width="370" Height="370" Margin="0 0 0 10">
            <Canvas x:Name="MainArea" VerticalAlignment="Bottom" HorizontalAlignment="Center" 
                    Width="370" Height="370" Margin="0 0 0 10">
            </Canvas>
        </Border>
    </StackPanel>
</Window>
